[mysqld]
#pid-file        = /tmp/mysqld.pid
datadir         = H:\\data #use default in WSF
#log-error       = /var/log/mysql/error.log
#socket          =/tmp/mysql.sock
#bind_address    = dbserver #use default in WSF
#port            = 3306 #use default in WSF
default_authentication_plugin=mysql_native_password # mysql_native_password

# general
max_connections=4000 # 4000
table_open_cache=8000 # 8000
table_open_cache_instances=16 # 16
back_log=1500 # 1500
max_prepared_stmt_count=128000 # 128000
performance_schema=OFF # OFF
innodb_open_files=4000 # 4000

# buffers
innodb_buffer_pool_size={{ wl_tunables.MYSQL_INNODB_BUFFER_POOL_SIZE }}G # 4G
innodb_log_buffer_size=64M # 64M
innodb_log_file_size=1024M # 1024M
innodb_buffer_pool_instances=16 # 16
innodb_log_files_in_group=32 # 32